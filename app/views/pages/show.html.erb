<% content_for :head do %>
  <%= stylesheet_link_tag 'header' %>
  <%= stylesheet_link_tag 'page' %>
  <%= stylesheet_link_tag 'footer' %>
  
	<title><%= @page.name %> @ Bercy Chen Studio: Architecture + Construction</title>
	<meta name="keywords" content="${page.name}"/>
<% end %>


<div class="container">
	<%= render :partial => 'shared/header' %>
	
	<div class="content">
  	<h1><%= @page.name %></h1>
  	<%= @page.content.to_html %>
	</div>
	
	<%= render :partial => 'shared/footer' %>
</div>

