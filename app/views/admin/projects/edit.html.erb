<h1>Editing project</h1>

<%= render :partial => 'admin/shared/project_header' %>
  
<% form_for([:admin, @project]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short %><br />
    <%= f.text_area :short %>
  </p>
  <p>
    <%= f.collection_select :tag_ids, Tag.all, :id, :name, { :selected => @project.tag_ids }, { :multiple => true, :name => 'project[tag_ids][]', :size => Tag.all.count } %>
  </p>
  <p>
    <%= f.label :date_completed %><br />
    <%= f.datetime_select :date_completed %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p>
    <%= f.submit 'Update' %>
    or
    <%= link_to 'Delete', admin_project_path(@project), :confirm => 'Are you sure?', :method => :delete %>
  </p>
<% end %>

<%= link_to 'Show', @project %> |
<%= link_to 'Back', admin_projects_path %>
