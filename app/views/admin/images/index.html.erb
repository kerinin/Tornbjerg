<h1>Listing images of project <%=link_to @project.name, edit_admin_project_path(@project) %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Sync flickr</th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%=h image.name %></td>
    <td><%=h image.position %></td>
    <td><%=h image.sync_flickr %></td>
    <td><%= link_to 'Show', project_image_path(@project,image) %></td>
    <td><%= link_to 'Edit', edit_admin_project_image_path(@project,image) %></td>
    <td><%= link_to 'Destroy', edit_admin_project_image_path(@project,image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New image', new_admin_project_image_path(@project) %>
