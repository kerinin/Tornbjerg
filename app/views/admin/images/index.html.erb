<h1>Listing images of project <%=link_to @project.name, edit_admin_project_path(@project) %></h1>

<%= render :partial => 'admin/shared/project_header' %>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Name</th>
    <th>Position</th>
    <th>Project Thumb</th>
    <th>Sync flickr</th>
  </tr>

<% @images.ascend_by_position.each do |image| %>
  <tr>
    <td><%= image_tag image.attachment.url(:thumb) %></td>
    <td><%=h image.name %></td>
    <td><%=h image.position %></td>
    <td><%= image == @project.thumbnail ? 'Yes' : nil %></td>
    <td><%= image.sync_flickr ? 'Yes' : nil %></td>
    <td><%= link_to 'Show', project_image_path(@project,image) %></td>
    <td><%= link_to 'Edit', edit_admin_project_image_path(@project,image) %></td>
    <td><%= link_to 'Destroy', admin_project_image_path(@project,image), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p>Upload New Image</p>
<% form_for [:admin,@project,Image.new], :html => { :multipart => true } do |f| %>
  <%= f.file_field :attachment %>
  <%= f.submit 'Upload' %>
<% end %>
